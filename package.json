{
	"name": "career-aptitude-explorer",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
		"start": "npm run build && npm run serve",
		"build": "npm run client:build && npm run server:build",
		"server": "cd backend && npm run start",
		"server:dev": "cd backend && npm run dev",
		"server:build": "cd backend && npm run build",
		"client:dev": "cd frontend && npm run dev",
		"client:build": "cd frontend && npm run build",
		"install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
	},
	"devDependencies": {
		"concurrently": "^8.2.0",
		"typescript": "^5.3.3"
	}
}